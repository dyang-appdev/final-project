<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Team #<%= @team.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/teams" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/teams/<%= @team.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit team
        </a>
      </div>

      <div class="col">
        <a href="/delete_team/<%= @team.id %>" class="btn btn-block btn-outline-secondary">
          Delete team
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Client
      </dt>
      <dd>
        <%= @team.client.full_name %>
      </dd>

      <dt>
        Bcba
      </dt>
      <dd>
        <%= @team.bcba.full_name %>
      </dd>

      <dt>
        Rbt
      </dt>
      <dd>
        <%= @team.rbt.full_name %>
      </dd>

    </dl>
  </div>
</div>

