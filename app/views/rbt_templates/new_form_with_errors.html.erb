<!-- Validation failure messages -->
<% if @rbt.present? %>
  <% if @rbt.errors.any? %>
    <% @rbt.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new RBT
</h1>


<hr>

<form action="/create_rbt" method="post">
  <div class="form-group">
    <label for="bcba_name">
      BCBA Supervisor
    </label>
    
    <%= select_tag("bcba_name", options_from_collection_for_select(Bcba.all, :id, :full_name), :class => "form-control") %>
    or <a href="/bcbas/new">add a new BCBA</a> first
  </div>
  
  <div class="form-group">
    <label for="service_location">Service Location</label>
    <select id="service_location" name="service_location" class="form-control" value="<%= @rbt.service_location %>">
      <option>Clinic</option>
      <option>Patient's home</option>
      <option>Mix</option>
    </select>
  </div>


  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @rbt.address %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create rbt
  </button>
</form>

<hr>

<a href="/rbts">
  Go back
</a>
