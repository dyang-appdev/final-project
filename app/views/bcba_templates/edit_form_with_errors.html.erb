<% if @bcba.errors.any? %>
  <% @bcba.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit bcba #<%= @bcba.id %>
</h1>

<hr>

<form action="/update_bcba/<%= @bcba.full_messages %>" method="post">

  <div class="form-group">
    <label for="full_name">
      Full Name
    </label>

    <input type="text" id="full_name" name="full_name" class="form-control" value="<%= @bcba.full_name %>">
  </div>
  
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @bcba.address %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update bcba
  </button>
</form>

<hr>

<a href="/bcbas">
  Go back
</a>
