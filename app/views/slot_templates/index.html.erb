<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All Time Slots and Client Availabilities
    </h1>

    <a href="/slots/new" class="btn btn-block btn-outline-secondary">
      Add a new time slot
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr align="center">
        <th>
          Week of
        </th>

        <th>
          Slot start
        </th>

        <% @clients.each do |client| %>
        <th>
          <a href="/clients/<%=client.id %>">
            <%= client.full_name %>
          </a>
        </th>
        <% end %>
      </tr>

      <% @slots.each do |slot| %>
      <tr align="center">
        <td>
          <%= slot.week.week_of %>
        </td>

        <td>
          <%= slot.slot_start.strftime("%a %-I:%M %P") %>
        </td>

        <% @clients.each do |client| %>
          <% client_availability = slot.client_availabilities.find_by(client_id: client.id) %>
          <% if client_availability %>
              <td>
                <a href="/delete_client_availability/<%= client_availability.id %>">
                  <i class="fas fa-check"></i> <small class="text-muted">Remove</small>
                </a>
              </td>
          <% else %>
              <td>
                <form action="/create_client_availability" method="post">
                  <input type="hidden" name="client_id" value="<%= client.id %>">
                  <input type="hidden" name="slot_id" value="<%= slot.id %>">
                  <button class="btn btn-block btn-light">
                    Add
                  </button>
                </form>
              </td>
          <% end %>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
