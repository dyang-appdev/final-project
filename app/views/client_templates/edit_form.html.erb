<h1>
  Edit client #<%= @client.id %>
</h1>

<hr>

<form action="/update_client/<%= @client.id %>" method="post">
  
  <div class="form-group">
    <label for="full_name">
      Full Name
    </label>

    <input type="text" id="full_name" name="full_name" class="form-control">
  </div>
  
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @client.address %>">
  </div>

  <div class="form-group">
    <label for="age_band">
      Age band
    </label>

    <input type="text" id="age_band" name="age_band" class="form-control" value="<%= @client.age_band %>">
  </div>

  <div class="form-group">
    <label for="functioning_status">
      Functioning status
    </label>

    <input type="text" id="functioning_status" name="functioning_status" class="form-control" value="<%= @client.functioning_status %>">
  </div>

  <div class="form-group">
    <label for="service_location">
      Service location
    </label>

    <input type="text" id="service_location" name="service_location" class="form-control" value="<%= @client.service_location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update client
  </button>
</form>

<hr>

<a href="/clients">
  Go back
</a>
