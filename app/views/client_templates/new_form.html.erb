<!-- Validation failure messages -->
<% if @client.present? %>
  <% if @client.errors.any? %>
    <% @client.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new client
</h1>


<hr>

<form action="/create_client" method="post">

  <div class="form-group">
    <label for="full_name">
      Full Name
    </label>

    <input type="text" id="full_name" name="full_name" class="form-control">
  </div>
  
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control">
  </div>

  <div class="form-group">
    <label for="age_band">Age Band</label>
    <select id="age_band" name="age_band" class="form-control" value="select">
      <option>0-1</option>
      <option>1-3</option>
      <option>3-5</option>
      <option>5-8</option>
      <option>8-12</option>
      <option>12+</option>
    </select>
  </div>

  <div class="form-group">
    <label for="functioning_status">
      Functioning status
    </label>

    <input type="text" id="functioning_status" name="functioning_status" class="form-control">
  </div>

  <div class="form-group">
    <label for="service_location">Service Location</label>
    <select id="service_location" name="service_location" class="form-control" value="select">
      <option>Clinic</option>
      <option>Patient's home</option>
      <option>Mix</option>
    </select>
  </div> 

  <button class="btn btn-block btn-outline-secondary">
    Create client
  </button>
</form>

<hr>

<a href="/clients">
  Go back
</a>
